<%- include('header.ejs') %>

<% if(entries.length > 0) { %>

    <% entries.forEach(function(entry) { %>
        <div class="card">
            <div class="card-body" >
                <h4 class="card-title"><%= entry.title %></h4>
               <div class="card-text">Published: <%= entry.published %></div>
               <div class="card-text"><%= entry.content %></div>
            </div>
        </div>
        <hr />
    <% });  %>
<% } else { %>
    <div class="alert alert-danger" >
        <p>No entries! <a href="/new-entry">New Entry</a></p>
    </div>
<% } %>

<%- include('footer.ejs') %>
